$triangle
	position: absolute
	bottom: 0
	left: 0
	z-index: 1
	width 100%
	height 35%
	display block
	+above('m')
		height 40%
	> .tri
		&--gray
			fill: cor.gray
		&--red
			fill: cor.red
		&--white
			fill: cor.white

$disclaimer
	position: absolute
	z-index: 2
	left: 10px
	bottom: @left
	color: cor.white
	> a
		unstyledLink()
		> .icon__dgs
		> span
			display inline-block
			vertical-align middle
		> span
			display none
		> .icon__dgs
			fill: cor.white
			width: 80px
			height: 30px
		+above('m')
			> span
				display inline-block

html
	width: 100%
	height: 100%
	touch-action: manipulation
	color: cor.gray
	background-color: cor.white
	font-size: 1em
	line-height: 1.4

body
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	word-wrap: break-word
	font-family: 'Abel', sans-serif

.obfuscator
	position: fixed
	background-color: transparent
	top: 0
	left: 0
	height: 100%
	width: 100%
	z-index: 4
	visibility: hidden
	transition-property: background-color
	transition-duration: .2s
	transition-timing-function: cubic-bezier(.4,0,.2,1)
	&--visible
		background-color: rgba(0,0,0,.5)
		visibility: visible

.hamburguer
	box-sizing: border-box
	margin: 0
	padding: 10px
	position: fixed
	top 5px
	left 5px
	z-index 5
	background-color: rgba(cor.gray, 0.9)
	cursor pointer

.hamburguer__icon
	fill: cor.white
	width 35px
	height @width
