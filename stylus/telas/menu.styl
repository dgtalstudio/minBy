.menu
  display: flex
  flex-direction: column
  flex-wrap: nowrap
  width: 280px
  height: 100%
  max-height: 100%
  position: absolute
  top: 0
  left: 0
  box-sizing: border-box
  border-right: 1px solid #e0e0e0
  background: $cor.menuBg
  transform-style: preserve-3d
  will-change: transform
  transition-duration: .5s
  transition-timing-function: cubic-bezier(.4,0,.2,1)
  transition-property: transform
  overflow: visible
  overflow-y: auto
  z-index: 5
  transform: translateX(-290px)
  +above(1024px)
    transform: translateX(0)

.menu--open
  transform: translateX(0)

.menu__divider
  box-sizing: border-box
  margin: 0
  padding: 0
  border-top: 2px solid $cor.menuDivUp
  border-bottom: 1px solid $cor.menuDivDown
  // width: 100%
  // height: 1px
  overflow: hidden

.menuProfile
  box-sizing: border-box
  position: relative

.menuProfile__chk
  appearance: none
  position: absolute
  top: 0
  left: 0
  visibility: hidden

.menuProfile__pic
  width: 100px
  height: @width
  display: block
  margin: 20px auto
  border-radius: 50%

.menuProfile__trigger
  cursor: pointer
  display: block
  margin: 5px auto 10px
  color: $cor.menuTxt
  text-align: center
  span
  svg
    display: inline-block
    vertical-align middle

.panelbox
  tooltip(white)
  display: none
  padding: 0

.panelbox__nav
  padding: 10px 0
  > a
    unstyledLink()
    display: block
    padding: 5px 25px
    color: $cor.black
    &:hover
      background-color: $cor.menuHover
      color: $cor.white

.menuProfile__chk:checked ~ .panelbox
  display: inline-block
  visibility: visible
  opacity: 1
  transform: translate(-50%, 10px)
  top: auto
  left: 50%

.menuLista
  box-sizing: border-box

.menuLista__title
  color: $cor.menuTitle
  padding: 15px
  margin: 0

.menuLista__nav
  box-sizing: border-box
  > a
    unstyledLink()
    display: block
    padding: 15px
    svg
    span
      display: inline-block
      vertical-align middle
    svg
      margin-right: 10px
    span
      color: $cor.menuTxt
    &:hover
      background-color: $cor.menuHover
      svg
        fill: $cor.menuHoverTxt
      span
        color: $cor.menuHoverTxt
