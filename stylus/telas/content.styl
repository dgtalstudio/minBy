.tri-svg
	@extends $triangle
	position: static
	height 15vw
	display block

.tri-svg--top
.tri-svg--bottom
	transform: scaleY(1.01)

.tri-svg--top
	transform-origin: top center

.tri-svg--bottom
	transform-origin: 0 0

.tri-svg--big
	height 30%

.contentInfo
	center(1200px)
	padding 30px
	box-sizing: border-box
	position: relative
	z-index: 2

.contentInfo--red
	background-color: cor.red

.contentInfo--gray
	background-color: cor.gray

.info__title
	margin: 0 0 15px 0
	font-size: 1.5em
	color: cor.red
	box-sizing: border-box
	text-transform: uppercase
	> span
		color: cor.gray

.info__chamada--white
.info__title--white
	color: cor.white

.info__chamada--gray
.info__title--gray
	color: cor.gray

.icon__wrap
	position: relative

.icon__wrap
.icon__circle
	width: 70px
	height: @width

.icon__inside
	width: 30px
	height: @width

.icon__inside--center
	align()

.icon--red
	fill: cor.red

.icon--white
	fill: cor.white

.icon--gray
	fill: cor.gray

.contato__wrap
	position relative
	display flex
	// flex-wrap: wrap
	flex-direction: column
	// align-items: flex-start
	+above('l')
		flex-direction: row

.contato__item
	flex: 0 1 100%
	margin-bottom: 20px
	+above('l')
		flex: 0 1 50%
		margin-bottom: 0px

.contato__info
	padding-right: 20px
	> .info
		> .icon__phone
		> span
			margin-right 10px
			display inline-block
			vertical-align middle
		> .icon__phone
			width: 15px
			height: @width
			fill: cor.red

.map-canvas
	width 100%
	height 340px

.frm__input
	margin-bottom 10px
	> label
		font-size 0.9em
		display block
		margin-bottom 5px

.frm__btn
	text-align right

.footer
	position relative
	width 100%
	height 60vh

.footer__svg
	@extends $triangle

.footer__disclaimer
	@extends $disclaimer

