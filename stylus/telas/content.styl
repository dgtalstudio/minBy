.tri-svg
	@extends $triangle
	display block
	height 15vw
	position: relative
	z-index: 2

.tri-svg--top
.tri-svg--bottom
	transform: scaleY(1.01)

.tri-svg--top
	transform-origin: top center

.tri-svg--bottom
	transform-origin: 0 0

.tri-svg--big
	height 30%

.tri
	width 0
	height 0
	border-style solid
	display block
	box-sizing border-box

.tri__bl
	border-width 50px 0 0 100vw
	border-color: transparent transparent transparent cor.white
.tri__bl--red
	border-color: transparent transparent transparent cor.red
.tri__bl--gray
	border-color: transparent transparent transparent cor.gray

.tri__tl
	border-width: 70px 100vw 0 0
	border-color: cor.white transparent transparent transparent
.tri__tl--red
	border-color: cor.red transparent transparent transparent
.tri__tl--gray
	border-color: cor.gray transparent transparent transparent

.condominioHeader
	width: 100%
	height 70vh
	background-image: url('../images/condominio-mobile.jpg')
	background-size: cover
	box-shadow: 0px 5px 21px -5px rgba(0,0,0,0.75);
	+above(500px)
		background-image: url('../images/condominio.jpg')

.logo
	width 100%
	height 70vh
	position: absolute
	top: 0
	left: 0
	z-index: 3

.faixa
	position: absolute
	top: 0
	left: 0
	align(vertical)
	width: 100%
	height: 25vh
	background-color: rgba(cor.white, 0.85)
	box-shadow: 0px 0px 10px 5px rgba(0,0,0,0.5);

.logo__img
	align()
	width: 300px
	+above(500px)
		width: 450px

.contentInfo
	center(1200px)
	padding 2em
	box-sizing: border-box
	position: relative
	z-index: 2

.contentInfo--red
	position: relative
	z-index: 2
	background-color: cor.red

.contentInfo--gray
	position: relative
	z-index: 2
	background-color: cor.gray

.info__title
	margin: 0 0 15px 0
	font-size: 1.95em
	color: cor.red
	box-sizing: border-box
	text-transform: uppercase
	> span
		color: cor.gray

.info__chamada--white
.info__title--white
	color: cor.white

.info__chamada--gray
.info__title--gray
	color: cor.gray

.icon__wrap
	position: relative

.icon__wrap
.icon__circle
	width: 70px
	height: @width

.icon__inside
	width: 30px
	height: @width

.icon__inside--center
	align()

.icon--red
	fill: cor.red

.icon--white
	fill: cor.white

.icon--gray
	fill: cor.gray

.contato__wrap
	position relative
	display flex
	flex-direction: column
	align-items: stretch
	flex-wrap: nowrap
	+above('l')
		flex-direction: row

.contato__item
	+above('l')
		flex: 0 1 50%

.contato__info
	display flex
	flex-direction: column
	flex-wrap: nowrap
	margin-right: 0
	margin-bottom: 20px
	+above('l')
		margin-right: 20px
		margin-bottom: 0
	> .info
		> .icon__phone
		> span
			margin-right 10px
			display inline-block
			vertical-align middle
		> .icon__phone
			width: 15px
			height: @width
			fill: cor.red

.contato__child
	flex: 0 0 auto

.map-canvas
	width 100%
	min-height 300px
	flex-grow: 2

.frm__input
	margin-bottom 10px
	> label
		font-size 0.9em
		display block
		margin-bottom 5px

.frm__btn
	text-align right

.footer
	position relative
	width 100%

.footer__svg
	@extends $triangle
	height 200px
	position: relative
	z-index: 2

.footer__disclaimer
	@extends $disclaimer
	z-index: 3

