.tri-svg
	@extends $triangle
	display block
	height 15vw
	position: relative
	z-index: 2

.tri-svg--top
.tri-svg--bottom
	transform: scaleY(1.01)

.tri-svg--top
	transform-origin: top center

.tri-svg--bottom
	transform-origin: 0 0

.tri-svg--big
	height 30%

.contentInfo
	center(1200px)
	padding 30px
	box-sizing: border-box
	position: relative
	z-index: 2

.contentInfo--red
	position: relative
	z-index: 2
	background-color: cor.red

.contentInfo--gray
	position: relative
	z-index: 2
	background-color: cor.gray

.info__title
	margin: 0 0 15px 0
	font-size: 1.75em
	color: cor.red
	box-sizing: border-box
	text-transform: uppercase
	> span
		color: cor.gray

.info__chamada--white
.info__title--white
	color: cor.white

.info__chamada--gray
.info__title--gray
	color: cor.gray

.icon__wrap
	position: relative

.icon__wrap
.icon__circle
	width: 70px
	height: @width

.icon__inside
	width: 30px
	height: @width

.icon__inside--center
	align()

.icon--red
	fill: cor.red

.icon--white
	fill: cor.white

.icon--gray
	fill: cor.gray

.contato__wrap
	position relative
	display flex
	flex-direction: column
	align-items: stretch
	flex-wrap: nowrap
	+above('l')
		flex-direction: row

.contato__item
	+above('l')
		flex: 0 1 50%

.contato__info
	display flex
	flex-direction: column
	flex-wrap: nowrap
	margin-right: 0
	margin-bottom: 20px
	+above('l')
		margin-right: 20px
		margin-bottom: 0
	> .info
		> .icon__phone
		> span
			margin-right 10px
			display inline-block
			vertical-align middle
		> .icon__phone
			width: 15px
			height: @width
			fill: cor.red

.contato__child
	flex: 0 0 auto

.map-canvas
	width 100%
	min-height 300px
	flex-grow: 2

.frm__input
	margin-bottom 10px
	> label
		font-size 0.9em
		display block
		margin-bottom 5px

.frm__btn
	text-align right

.footer
	position relative
	width 100%

.footer__svg
	@extends $triangle
	height 40vw
	position: relative
	z-index: 2

.footer__disclaimer
	@extends $disclaimer
	z-index: 3

