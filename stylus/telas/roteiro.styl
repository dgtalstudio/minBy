.scroll-size
	height: 2000px
	overflow: hidden
	background-color: cor.red
	position: relative
	z-index: 1

.condominio
	width: 100%
	height 100vh
	background-image: url('../images/condominio-mobile.jpg')
	background-size: cover
	position: fixed
	top: 0
	left: 0
	z-index: 1
	+above(500px)
		background-image: url('../images/condominio.jpg')

.polys
	width 100%
	height 100vh
	position fixed
	top 0
	left 0
	z-index: 2
	> .poly
		perspective 600
		width 100%
		height 100%
		&--white
			fill: cor.white
		&--red
			fill: cor.red

.logo
	width 100%
	height 100vh
	position: absolute
	top: 0
	left: 0
	z-index: 3

.logo__img
	align()
	width: 300px
	+above(500px)
		width: 450px

.logo__arrow
	align(horizontal)
	width: 70px
	fill: cor.red
	bottom: 10px

.slogan
	position: fixed
	top: 0
	right: -160%
	width: 70%
	height: 100%
	box-sizing: border-box
	z-index: 4

.slogan__txt
	align(vertical)
	text-transform: uppercase
	color: white
	font-size: 2em
	word-wrap: break-word
	text-align: center
	+above(500px)
		font-size: 3.3em

.hidden
	visibility: hidden
	display: none

.tri-roteiro
	@extends $triangle
	height 15vw
	display block
	position: absolute
	bottom: 0
	z-index: 1000
