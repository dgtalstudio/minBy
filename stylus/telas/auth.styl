$formLabel
  position: relative
  margin-bottom: 17px
  > label
    align(direction: v)
    left 15px
    right auto
    color: transparent
    z-index 1
  > .input__svg
    fill: $cor.white
    width: 20px
    height: @width
    align(direction: v)
    left 15px
    right auto
    z-index 3
  > input
    border-radius: 5px
    position: relative
    z-index 2
    padding-left: 50px
    border: 0
    color: $cor.loginFormTxt
    background-color: $cor.loginFormBg

    formfx($cor.loginFormBg)
    &::placeholder
      color: lighten($cor.loginFormTxt, 50%)
    &:-webkit-autofill
      background-color: $cor.red !important
      -webkit-text-fill-color: $cor.black !important;

.auth
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  background-color: $cor.black
  flex: 1 1 auto

.auth__form
  margin-top: 100px
  margin-bottom: 30px
  min-width: 300px

.authform__field
  @extend $formLabel

.authform__field--mb
  margin-bottom 27px

.authform__submit
  color: $cor.black
  border-radius: 5px
  margin-bottom: 15px

.authform__link
  unstyledLink()
  text-align: center
  display: block
  color: $cor.white
