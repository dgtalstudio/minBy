.table
  +below(3)
    display: block
    background-color: transparent
    box-shadow: none
    thead
      display: none
    tbody,
    tr,
    td
      display: block
    td
      display: flex
      flex-wrap: nowrap
      justify-content: space-between
      align-items: center
      &:before
        content: attr(data-th)
        font-weight: bold
        display: block
        padding-right: 10px
        color: $cor.tableHead
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        vertical-align: middle
    > tbody
      > tr,
      > tr:hover
        background-color: $cor.white
      > tr,
      > tr:first-child
        margin-bottom: 20px
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
        > td
          border-top: 1px solid lighten($cor.tableBorder, 25)
          &:first-child
            border: 0

