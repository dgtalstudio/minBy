$inblva
  display: inline-block
  vertical-align: bottom

table
  background-color: white

th
  text-align: left

.table
  table-layout: fixed
  width: 100%
  max-width: 100%
  > tbody,
  > tfoot
    > tr
      > td
        padding: 15px
        border-top: 1px solid lighten($cor.tableBorder, 25)
    > tr:first-child
      > td
        border-top: 0

  > thead > tr > th
    padding: 15px
    border-bottom: 2px solid lighten($cor.tableBorder, 25)
    font-weight: normal
    color: $cor.tableHead

  > thead:first-child
    > tr:first-child
      > th,
      > td
        border-top: 0

table col[class*="col-"]
  position: static
  float: none
  display: table-column

table
  td,
  th
    &[class*="col-"]
      position: static
      float: none
      display: table-cell

.table__td--right
  text-align: right

.table__td--center
  text-align: center

.table--hover
  > tbody > tr:hover
    background-color: #F5F5F5
    cursor: pointer

.table--shadow
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1)
