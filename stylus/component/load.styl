.loadingSpinner
  box-sizing: border-box
  width: 40px
  height: @width
  border-radius: 100%
  border: 5px solid rgba($cor.loading, .3)
  border-bottom-color: $cor.loading
  animation: loadingLoop 0.5s linear infinite
  margin: 0 5px

+keyframes(loadingLoop)
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)
