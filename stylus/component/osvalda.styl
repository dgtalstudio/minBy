.os-header
	display: none
	width: 100%
	height: 5.5em
	text-align: center
	background-color: #fff
	position: fixed
	z-index: 1000
	top: 0
	left: 0
	box-shadow: 0 0.063em 0.25em rgba( 37, 50, 55, .25 )
	+above('l')
		display: block

.os-container
	center(1200px)
	padding 0 2em 0 2em
	height: 100%
	overflow: hidden
	> svg
		width: 145px
		height: 100%
		float: left
	> nav
		height: 100%
		display: table
		float: right
		> ul
			height: 100%
			vertical-align: middle
			display: table-cell
			> li
				float: left
				display: inline-block
				> a
					unstyledLink()
					height: 2.5em
					text-transform: uppercase
					line-height: 2.5em
					color: cor.white
					display: block
					background-color: cor.gray
					padding: 0 0.625em
					&:hover
						background-color: lighten(cor.gray, 30)

				&.isLogin
					> a
						background-color: cor.red
						&:hover
							background-color: lighten(cor.gray, 30)

				&:not(:last-child) > a
					border-right: 1px solid cor.white
