$btn
  position relative
  box-sizing border-box
  width 100%
  padding 0.75em
  margin 0
  overflow hidden
  will-change background-color
  transition 0.5s background-color

btn(c)
  background-color: c
  &:hover
  &:focus
    outline: none
  &:hover
    background-color: darken(c, 20%)

button
  appearance: none
  border: none
  border-radius: 0
  font-weight: 400
  font-size: 1.3em
  color: cor.white
  cursor: pointer

.btn
  @extend $btn

for k, v in cor
  .btn--{k}
    btn(v)
